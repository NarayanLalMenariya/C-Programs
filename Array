==============================================
// Array - Liner Data Structure.
==============================================
#include<stdio.h>
#include<conio.h>
#include<string.h>

int main()
{
	int arr[10] = {0};
	int i;
	for(i = 0; i<10;i++)
	{
		printf("\nEnter Input Element: ");
		scanf("%d",&arr[i]);
	}
	
	// Find Smallest element in array
	int small= arr[0];
	for(i=0;i<10;i++)
	{
		if (arr[i] < small)
		{
				small = arr[i];
		}
	}	
	printf("Smallest Elemnt:%d\n",small);
	
	//find largest element
	int largest = arr[0];
	for(i=0;i<10;i++)
	{
		if(arr[i] > largest)
		{
			largest = arr[i];
		}
	}
	printf("Largest Element:%d\n",largest);
	
	//Sort array in ascesnding order
	int j	 =0;
	int temp = 0;
	for(i=0;i<9;i++)
	{
		for(j=i+1;j<10;j++)
		{
			if(arr[i] > arr[j])
			{
				temp   = arr[i];
				arr[i] = arr[j];
				arr[j] = temp;
			}
		}
	}
	// Get Smallest & largest elment:
	printf("\nSmallest Element:%d, Largest Element:%d\n",arr[0],arr[9]);
	
	printf("=========== Ascending Order sorted array =============\n");
	//Print array;
	for(i=0;i<10;i++)
		printf("%d ",arr[i]);
		
	
	
	// Sort array in descending order
	for(i=0;i<9;i++)
	{
		for(j=i+1;j<10;j++)
		{
			if(arr[i] < arr[j])
			{
				temp   = arr[i];
				arr[i] = arr[j];
				arr[j] = temp;
			}
		}
	}
	
	printf("\n=========== Descending Order sorted array =============\n");
	//Print array;
	for(i=0;i<10;i++)
		printf("%d ",arr[i]);
		
		
	return 0;
}
